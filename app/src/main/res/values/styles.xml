<resources>

    <!-- Main application theme. -->
    <style name="KTAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:buttonStyle">@style/ButtonTheme</item>

        <!-- Color Palette -->
        <!-- http://www.google.com/design/spec/style/color.html#color-color-palette -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#1A237E</item>
        <item name="colorAccent">#FFD54F</item>
    </style>

    <style name="ButtonTheme" parent="Base.Widget.AppCompat.Button">
        <item name="android:backgroundTint">#304FFE</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
